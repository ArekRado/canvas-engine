{
  "compilerOptions": {
    "outDir": "./",
    "module": "CommonJS",
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2015",
      "es2017.object",
      "ES2019"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    // "declaration": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  // "filesGlob": ["typings/index.d.ts", "src/**/*"]
}